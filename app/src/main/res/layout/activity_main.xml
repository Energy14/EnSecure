<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/endistext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Disabled"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="23dp"
        android:textAllCaps="true"/>
    <ImageButton
        android:id="@+id/main_but"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ripple_effect"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/secicon" />
    <TextView
        android:id="@+id/but_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Security"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/intr_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_marginTop="90dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intrusions detected"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:textSize="20dp"/>
</LinearLayout>